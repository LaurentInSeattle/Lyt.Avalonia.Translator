<UserControl
	x:Class="Lyt.Avalonia.Translator.Workflow.CreateNew.DropView"
	xmlns:vm="clr-namespace:Lyt.Avalonia.Translator.Workflow.CreateNew"

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	>
	<Grid
		Background="Transparent"
		>
		<Border
			x:Name="DropBorder"
			Margin="10 10 10 10"
			Background="#20808080"
			BorderThickness="0"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			DragDrop.AllowDrop="True"
			>
			<Grid>
				<Rectangle
					x:Name="DropRectangle"
					Stroke="{StaticResource LightAqua_1_100}"
					StrokeDashArray="5, 2" StrokeThickness="4"
					RadiusX="8" RadiusY="8"
					Fill="#20808080"
					/>
				<TextBlock
					Margin="0 12 0 0"
					Text="{DynamicResource CreateNew.DropZone}"
					FontSize="24"
					FontWeight="DemiBold"
					TextAlignment="Center"
					Foreground="{StaticResource PastelOrchid_0_080}"
					VerticalAlignment="Top"
					/>
				<TextBlock
					Margin="12 0 12 20"
					Text="{DynamicResource CreateNew.DropZoneHelp}"
					FontSize="12"
					TextAlignment="Center"
					Foreground="{StaticResource PastelOrchid_0_080}"
					VerticalAlignment="Bottom"
					TextWrapping="Wrap"
					/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
