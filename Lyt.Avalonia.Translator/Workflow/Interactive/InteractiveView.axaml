<UserControl 
	x:Class="Lyt.Avalonia.Translator.Workflow.Interactive.InteractiveView"

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="450"
	
	xmlns:shared="clr-namespace:Lyt.Avalonia.Translator.Workflow.Shared"
	xmlns:vm="clr-namespace:Lyt.Avalonia.Translator.Workflow.Interactive"
	x:DataType="vm:InteractiveViewModel" 
	>
	<Grid
		Margin="12"
		>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="8" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="24" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="8" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="8" />
			<RowDefinition Height="52" />
			<RowDefinition Height="12" />
			<RowDefinition Height="*" />
			<RowDefinition Height="8" />
		</Grid.RowDefinitions>

		<Rectangle
			Fill="#30000020"
			Grid.Column="1" Grid.Row="3"
			/>
		<TextBlock
			Grid.Column="1" Grid.Row="1"
			Margin="0 0 0 0"
			Text="{DynamicResource Interactive.SourceLanguage}"
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Center" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>

		<ComboBox
			x:Name="SourceLanguageComboBox"
			Grid.Column="1" Grid.Row="1" 
			VerticalAlignment="Center" HorizontalAlignment="Right"
			ItemsSource="{Binding SourceLanguages}"
			SelectedIndex="{Binding SelectedSourceLanguageIndex}"
			Width="360" Height="52" MaxDropDownHeight="400"
			>
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<shared:LanguageInfoView />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBox
			Grid.Column="1" Grid.Row="3"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			AcceptsReturn="True"
			FontSize="20"
			>
		</TextBox>
		<TextBlock
			Grid.Column="3" Grid.Row="1"
			Margin="0 0 0 0"
			Text="{DynamicResource Interactive.TargetLanguage}"
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Center" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>

		<ComboBox
			x:Name="TargetLanguageComboBox"
			Grid.Column="3" Grid.Row="1"
			VerticalAlignment="Center" HorizontalAlignment="Right"
			ItemsSource="{Binding TargetLanguages}"
			SelectedIndex="{Binding SelectedTargetLanguageIndex}"
			Width="360" Height="52" MaxDropDownHeight="400"
			>
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<shared:LanguageInfoView />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<Rectangle
			Fill="#30000018"
			Grid.Column="3" Grid.Row="3"
			/>
		<TextBox
			Grid.Column="3" Grid.Row="3"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			IsReadOnly="True"
			FontSize="20"
			>
		</TextBox>
	</Grid>
</UserControl>
